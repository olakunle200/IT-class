<body>

   <div class="container mt-4   "> 
     <div class="row">
       <div class=" col-lg-8 offset-lg-2 col-md-6 offset-md-3 col-sm-12">
     
    <table   class="table table-dark table-striped" >
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Course Code</th>
          <th scope="col">Course Title</th>        
          <th scope="col">Credit Load</th> 
          <th scope="col">Actions</th> 
        </tr>
      </thead>
      <% let num = 0 %>

      <% for (let courses of courseAll) { %>
      <tbody>
        <tr>
          <th scope="row"><%= num = num + 1 %></th>
          <td><%= courses.course_code %></td>
          <td><%= courses.course_title %></td>
          <td><%= courses.credit_load %></td>        
          <td><a href="/adminDB/editCourses/<%= courses._id %>" class="text-decoration-none">Edit Courses</a></td>        
        </tr>
      </tbody>
      <% } %>
      
      
    </table>
    <a href="/adminDB/addcourses"><button class="w-20 btn btn-lg btn-primary " type="submit">Add Courses</button></a>
   </div>
