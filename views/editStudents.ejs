<body>
  <div class="container col-lg-8 offset-lg-2 col-md-6 offset-md-3 col-sm-12">
    <div class="row">
      <div class="col">
        <form action="/adminDB/editStudents" method="POST">
          <div class="form-floating mb-3">
            <label for="name"></label>
              <input type="text" class="form-control" name="name" id="name" placeholder="Full name"
              value="<%= student.name %>">
              
            </div>
  
            <div class="form-floating mb-3">
              <label for="mat_no"></label>
              <input type="text" class="form-control" name="mat_no" id="mat_no" placeholder="Marticulation Number"
              value="<%= student.mat_no %>">
              
            </div>
            <input type="hidden" name="Std" value="<%= student._id %>">
  
            <button class="w-100 btn btn-lg btn-primary" type="submit">Submit</button>
            
      </form>
      
      </div>
    </div>
  </div>
   
</body>
